<!-- Morph file with helpers and handshake for testing -->
<div class="container">
  <h1>{{title}}</h1>
  <p>{{content}}</p>
</div>

<script>
function formatTitle(title) {
  return title.toUpperCase();
}

function formatContent(content) {
  return content.trim();
}

export default function (data) {
  return {
    title: formatTitle(data.title || 'Hello'),
    content: formatContent(data.content || 'World'),
    formatted: `${formatTitle(data.title)}: ${formatContent(data.content)}`
  };
}
</script>

<style>
.container {
  padding: 1rem;
  border: 1px solid #ccc;
  border-radius: 4px;
}
</style>

<script type="application/json">
{
  "title": "Hello World",
  "content": "This is a test morph file with helpers and handshake"
}
</script>